<div id="<%= dom_id category %>" class="p-5 border-b border-gray-200">
  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <div class="mr-2">
        <%= category.icon_svg.html_safe %>
      </div>
      <h2 class="font-semibold text-lg text-gray-700 mr-2">
        <%= category.name %>
      </h2>
    </div>
    <div class="flex items-center">
      <%= link_to "Edit", edit_category_path(category), class: "text-yellow-500 hover:text-yellow-700 mr-4" %>
      <%= link_to "Delete", category, data: {  turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "text-red-500 hover:text-red-700" %>
    </div>
  </div>

  <% category.sub_categories.each do |child| %>
    <div class="ml-5 mt-4">
      <%= render 'category_tree', category: child %>
    </div>
  <% end %>
</div>
