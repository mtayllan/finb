<div data-controller="ui--select-field" class="relative">
  <input
    data-ui--select-field-target="searchInput"
    class="input w-full"
    type="text"
    placeholder="<%= @placeholder %>"
    data-action="focus->ui--select-field#openDropdown ui--select-field#search"
  >
  <input type="hidden" name="<%= @name %>" data-ui--select-field-target="inputValue" value="<%= @value %>">

  <div
    data-ui--select-field-target="dropdown"
    class="hidden absolute right-0 mt-1 w-full z-10 overflow-auto max-h-64 rounded-md border bg-base-100 text-base-content shadow-md"
  >
    <% options.each do |option| %>
      <%= option %>
    <% end %>
  </div>
</div>
