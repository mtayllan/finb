<div data-controller="components--color-select">
  <%= @form.hidden_field @attribute, value: @default_value %>

  <div class="grid grid-cols-6 gap-1 w-fit">
    <% COLORS.each do |color| %>
      <button
        type="button"
        style="background: <%= color %>"
        data-action="components--color-select#select"
        data-active="<%= color == @default_value %>"
        data-components--color-select-color-param="<%= color %>"
        class="h-10 w-10 cursor-pointer rounded-md hover:scale-105 data-[active=true]:border-foreground data-[active=true]:border-2">
      </button>
    <% end %>
  </div>

</div>



