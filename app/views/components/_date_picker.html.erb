<div data-controller="date-picker">

  <div class="relative">
    <input
      type="text"
      placeholder="dd/mm/yyyy"
      class="block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full"
      data-action="focus->date-picker#openCalendar"
      name="<%= name %>"
      value="<%= initial_value %>"
      data-date-picker-target="input"
      readonly>
    <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#000000" viewBox="0 0 256 256"><path d="M208,32H184V24a8,8,0,0,0-16,0v8H88V24a8,8,0,0,0-16,0v8H48A16,16,0,0,0,32,48V208a16,16,0,0,0,16,16H208a16,16,0,0,0,16-16V48A16,16,0,0,0,208,32ZM72,48v8a8,8,0,0,0,16,0V48h80v8a8,8,0,0,0,16,0V48h24V80H48V48ZM208,208H48V96H208V208Z"></path></svg>
    </div>
  </div>

  <div class="max-w-md px-4 mx-auto sm:px-7 md:max-w-4xl md:px-6 mt-6 hidden" data-date-picker-target="calendar">
    <div>
      <div class="flex items-center">
        <h2 class="flex-auto font-semibold text-gray-900" data-date-picker-target="currentMonth">
        </h2>
        <button
          type="button"
          data-action="date-picker#previousMonth"
          class="-my-1.5 flex flex-none items-center justify-center p-1.5 text-gray-400 hover:text-gray-500"
        >
          <span class="sr-only">Previous month</span>
          <span class="w-5 h5" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#000000" viewBox="0 0 256 256"><path d="M165.66,202.34a8,8,0,0,1-11.32,11.32l-80-80a8,8,0,0,1,0-11.32l80-80a8,8,0,0,1,11.32,11.32L91.31,128Z"></path></svg>
          </span>
        </button>
        <button
          data-action="date-picker#nextMonth"
          type="button"
          class="-my-1.5 -mr-1.5 ml-2 flex flex-none items-center justify-center p-1.5 text-gray-400 hover:text-gray-500"
        >
          <span class="sr-only">Next month</span>
          <span class="w-5 h5" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#000000" viewBox="0 0 256 256"><path d="M181.66,133.66l-80,80a8,8,0,0,1-11.32-11.32L164.69,128,90.34,53.66a8,8,0,0,1,11.32-11.32l80,80A8,8,0,0,1,181.66,133.66Z"></path></svg>
          </span>
        </button>
      </div>
      <div class="grid grid-cols-7 mt-10 text-xs leading-6 text-center text-gray-500">
        <div>S</div>
        <div>M</div>
        <div>T</div>
        <div>W</div>
        <div>T</div>
        <div>F</div>
        <div>S</div>
      </div>
      <div class="grid grid-cols-7 mt-2 text-sm" data-date-picker-target="days">
      </div>
    </div>
  </div>

  <div class="flex gap-8 mt-2">
    <% 1.upto(7) do |i| %>
      <% date = i.days.ago.to_date %>
      <button
        type="button"
        class="text-blue-600 inline-block"
        data-action="date-picker#quickSelect"
        data-date-picker-value-param="<%= date.to_fs(:day_month_year) %>"
      >
        <% if date.yesterday? %>
          Yesterday
        <% else %>
          <%= date.strftime('%a %d') %>
        <% end %>
      </button>
    <% end %>
  </div>
</div>
