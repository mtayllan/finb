<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
  <!-- Total I Owe -->
  <div class="card bg-error/10 border border-error/20">
    <div class="card-body p-4">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-sm font-medium text-error">I Owe</h3>
          <p class="text-2xl font-bold text-error">
            <%= number_to_currency(@splits_summary[:total_i_owe]) %>
          </p>
          <p class="text-xs text-gray-500">
            <%= pluralize(@splits_summary[:count_i_owe], 'split') %>
          </p>
        </div>
        <div class="text-error">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Total Owed to Me -->
  <div class="card bg-success/10 border border-success/20">
    <div class="card-body p-4">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-sm font-medium text-success">Owed to Me</h3>
          <p class="text-2xl font-bold text-success">
            <%= number_to_currency(@splits_summary[:total_owed_to_me]) %>
          </p>
          <p class="text-xs text-gray-500">
            <%= pluralize(@splits_summary[:count_owed_to_me], 'split') %>
          </p>
        </div>
        <div class="text-success">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Net Balance -->
  <div class="card bg-info/10 border border-info/20">
    <div class="card-body p-4">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-sm font-medium text-info">Net Balance</h3>
          <p class="text-2xl font-bold <%= @splits_summary[:net_balance] >= 0 ? 'text-success' : 'text-error' %>">
            <%= number_to_currency(@splits_summary[:net_balance]) %>
          </p>
          <p class="text-xs text-gray-500">
            <%= @splits_summary[:net_balance] >= 0 ? "You're owed more" : "You owe more" %>
          </p>
        </div>
        <div class="text-info">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>
