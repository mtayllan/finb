<!-- Content -->
<div class="tab-content">
  <% if params[:tab] == "summary" && @splits_summary %>
    <%= render "summary_cards" %>
  <% end %>

  <% if @splits.empty? %>
    <div class="alert alert-info">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span>No splits found for this view.</span>
    </div>
  <% else %>
  <div class="overflow-x-auto">
    <table class="table table-zebra">
      <thead>
        <tr>
          <th>Transaction</th>
          <th>Amount</th>
          <th>From</th>
          <th>To</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @splits.each do |split| %>
          <tr>
            <td>
              <div class="font-semibold"><%= split.source_transaction.description %></div>
              <div class="text-sm text-gray-500"><%= split.source_transaction.date.strftime('%b %d, %Y') %></div>
            </td>
            <td>
              <div class="font-semibold"><%= number_to_currency(split.amount_owed) %></div>
            </td>
            <td>
              <div class="flex items-center space-x-2">
                <div class="avatar placeholder">
                  <div class="bg-neutral-focus text-neutral-content rounded-full w-8">
                    <span class="text-xs"><%= split.payer.username.first.upcase %></span>
                  </div>
                </div>
                <span><%= split.payer.username %></span>
              </div>
            </td>
            <td>
              <div class="flex items-center space-x-2">
                <div class="avatar placeholder">
                  <div class="bg-neutral-focus text-neutral-content rounded-full w-8">
                    <span class="text-xs"><%= split.owes_to.username.first.upcase %></span>
                  </div>
                </div>
                <span><%= split.owes_to.username %></span>
              </div>
            </td>
            <td>
              <% if split.paid? %>
                <div class="badge badge-success gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Paid
                </div>
                <div class="text-xs text-gray-500"><%= split.paid_at.strftime('%b %d') %></div>
              <% else %>
                <div class="badge badge-warning gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Pending
                </div>
              <% end %>
            </td>
            <td>
              <div class="flex space-x-2">
                <%= link_to split_path(split), class: "btn btn-ghost btn-xs" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                <% end %>

                <%= link_to edit_split_path(split), class: "btn btn-ghost btn-xs" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                  </svg>
                <% end %>

                <% unless split.paid? %>
                  <%= button_to mark_as_paid_split_path(split), method: :patch,
                      params: { tab: params[:tab] },
                      class: "btn btn-ghost btn-xs" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  <% end %>
                <% end %>

                <%= button_to split_path(split), method: :delete,
                    params: { tab: params[:tab] },
                    class: "btn btn-ghost btn-xs text-error", confirm: "Are you sure?" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
