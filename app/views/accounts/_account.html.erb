<div id="<%= dom_id account %>" class="rounded-lg overflow-hidden shadow-lg p-6 bg-white">
  <div class="font-bold text-xl mb-2"><%= account.name %></div>
  <p class="text-gray-700 text-base">
    Balance: <%= account.balance %>
  </p>
  <p class="text-gray-700 text-base">
    Last Update: <%= l(account.updated_at, format: :short) %>
  </p>
  <%= link_to "Edit this account", edit_account_path(account), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium mt-4" %>
</div>
